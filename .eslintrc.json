{
    "root": true,
    "extends": [
      "airbnb",
      "angular"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": { "jsx": true , "forOf": true }
    },
    "rules": {
        "no-undef": "off",
        "no-console": ["error", { "allow": ["warn", "error"]}],
        "arrow-body-style": ["error", "as-needed"],
        "object-property-newline": "off",
        "class-methods-use-this": "off",
        "func-names": "off",
        "prefer-destructuring": ["error", { "VariableDeclarator": { "array": false, "object": false }}],
        "no-mixed-operators": "off",
        "object-curly-newline": "off",
        "no-param-reassign": ["error", { "props": false }],
        "no-underscore-dangle": ["error", { "allowAfterThis": true, "allowAfterSuper": true, "allow": ["__setXHR_", "__XHR", "__font", "__link"] }],
        "quotes": ["error", "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
        "quote-props": ["error", "consistent"],
        "eol-last": "error",
        "indent": ["error", 2, { "MemberExpression": "off" }],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
        "no-trailing-spaces": "error",
        "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
        "curly": "error",
        "object-curly-spacing": ["error", "always"],
        "block-spacing": "error",
        "space-before-blocks": ["error", {"functions": "always", "keywords": "always", "classes": "always"}],
        "array-bracket-spacing": ["error", "never"],
        "space-in-parens": ["error", "never"],
        "no-extra-semi": "error",
        "semi": ["error", "never"],
        "key-spacing": ["error", { "afterColon": true }],
        "linebreak-style": ["error", "unix"],
        "space-before-function-paren": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "comma-style": "error",
        "comma-spacing": ["error", { "before": false, "after": true }],
        "new-cap": [1, {"newIsCap": true, "capIsNew": false}],
        "spaced-comment": ["error", "always"],
        "no-debugger": ["error"],
        "prefer-const": ["error"],
        "max-len": ["error", 300],
        "no-restricted-properties": "off",
        "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
        "guard-for-in": "off",
        "operator-linebreak": ["error", "none", {"overrides": {
            "?": "ignore",
            ":": "ignore",
            "+": "after"
        }}],
        "angular/no-private-call": ["error", {"allow": ["$$phase", "$$element"]}],
        "keyword-spacing": ["error", { "before": false, "after": true }],
        "angular/controller-as": ["off"],
        "angular/service-name": ["error", {"oldBehavior": false}],
        "import/extensions": ["always"]
    }
}
